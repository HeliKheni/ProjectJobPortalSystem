<h3>Job Seekers</h3>
@if (Model.appliedJobSeekers != null && Model.appliedJobSeekers.Any())
{
    foreach (var jobSeeker in Model.appliedJobSeekers)
    {
        <p>Job Seeker ID: @jobSeeker.Id</p>
        <p>First Name: @jobSeeker.FirstName</p>
        
    }
}
else
{
    <p>No job seekers available for this job.</p>
}